	#search(ng-app = "searchApp")
		.search-form(ng-controller= "searchController as sc")
			input.search-bar(type="text", name="query", placeholder="name in place" ng-model="query.text")
			button.search-button(type = "submit", value="Search")
				i.fa.fa-search(aria-hidden="true")
			p(ng-show="!query.text.length") 
				| just start typing random letters something is bound to come up
			.results-container(ng-show="query.text.length")
				.results-row(ng-repeat="rows in formattedResults | filter: query.text | limitTo: loadMoreLimit" emit-last-repeater-element)
					.image-container(ng-repeat="result in rows | filter: query.text")
						img.image-results(src= "{{result.url}}")
						//{{result.title}}
				button.load-more(ng-click="loadMoreResults()")
